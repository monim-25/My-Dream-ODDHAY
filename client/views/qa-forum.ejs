<!DOCTYPE html>
<html class="light" lang="bn">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Q&A ফোরাম | ODDHAY</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Lexend:wght@300..900&family=Noto+Sans+Bengali:wght@300..900&display=swap"
        rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
        rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: { "primary": "#aa33ff" }, // Purple theme for Q&A
                    fontFamily: { "display": ["Lexend", "Noto Sans Bengali", "sans-serif"] },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Lexend', 'Noto Sans Bengali', sans-serif;
        }

        .pb-safe {
            padding-bottom: env(safe-area-inset-bottom, 20px);
        }
    </style>
</head>

<body class="bg-slate-50 dark:bg-[#0f172a] text-slate-900 dark:text-slate-100 min-h-screen pb-20">
    <!-- Header -->
    <header
        class="bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 px-4 py-4 sticky top-0 z-50">
        <div class="max-w-2xl mx-auto flex items-center justify-between">
            <div class="flex items-center gap-3">
                <a href="/dashboard" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-xl">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1 class="text-lg font-black">Q&A ফোরাম</h1>
            </div>
            <button onclick="openAskModal()"
                class="px-4 py-2 bg-primary text-white rounded-xl text-xs font-black flex items-center gap-1">
                <span class="material-symbols-outlined text-sm">add_comment</span> প্রশ্ন করুন
            </button>
        </div>
    </header>

    <main class="max-w-2xl mx-auto p-4 py-6 space-y-4">

        <!-- Search -->
        <div class="relative">
            <span class="material-symbols-outlined absolute left-4 top-3.5 text-slate-400">search</span>
            <input type="text" placeholder="প্রশ্ন খুঁজুন..."
                class="w-full pl-12 pr-4 py-3 rounded-2xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 focus:outline-none focus:border-primary font-bold">
        </div>

        <!-- Filter Tabs -->
        <div class="flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
            <a href="/qa-forum"
                class="px-4 py-2 rounded-xl bg-primary text-white text-xs font-black whitespace-nowrap">সব প্রশ্ন</a>
            <a href="/qa-forum?filter=my"
                class="px-4 py-2 rounded-xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 hover:border-primary transition-colors text-xs font-black whitespace-nowrap">আমার
                প্রশ্ন</a>
            <a href="/qa-forum?filter=solved"
                class="px-4 py-2 rounded-xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 hover:border-primary transition-colors text-xs font-black whitespace-nowrap">সমাধান
                করা</a>
        </div>

        <!-- Questions List -->
        <div class="space-y-4">
            <% if(questions && questions.length> 0) { %>
                <% questions.forEach(q=> { %>
                    <div
                        class="bg-white dark:bg-slate-900 p-5 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm hover:shadow-md transition-shadow">
                        <div class="flex items-start justify-between gap-4 mb-3">
                            <div class="flex items-center gap-3">
                                <div
                                    class="size-10 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center font-black text-slate-500">
                                    <%= q.askedByName ? q.askedByName[0] : 'U' %>
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-slate-500">
                                        <%= q.askedByName || 'Unknown' %>
                                    </p>
                                    <p class="text-[10px] text-slate-400">
                                        <%= new Date(q.createdAt).toLocaleDateString() %>
                                    </p>
                                </div>
                            </div>
                            <span
                                class="px-2 py-1 rounded-lg text-[10px] font-bold <%= q.status === 'resolved' ? 'bg-emerald-100 text-emerald-600' : 'bg-amber-100 text-amber-600' %>">
                                <%= q.status==='resolved' ? 'সমাধান করা হয়েছে' : 'অমীমাংসিত' %>
                            </span>
                        </div>

                        <h3 class="font-black text-sm mb-3">
                            <%= q.question %>
                        </h3>

                        <% if(q.answer) { %>
                            <div
                                class="bg-slate-50 dark:bg-slate-800 p-3 rounded-xl border border-slate-100 dark:border-slate-700">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="material-symbols-outlined text-emerald-500 text-sm">verified</span>
                                    <p class="text-[10px] font-bold text-emerald-500">শিক্ষকের উত্তর</p>
                                </div>
                                <p class="text-xs text-slate-600 dark:text-slate-300 leading-relaxed">
                                    <%= q.answer %>
                                </p>
                            </div>
                            <% } else { %>
                                <div class="flex items-center gap-2 text-slate-400">
                                    <span class="material-symbols-outlined text-sm">pending</span>
                                    <p class="text-[10px] font-bold">উত্তরের জন্য অপেক্ষা করা হচ্ছে...</p>
                                </div>
                                <% } %>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="text-center py-12">
                                <span class="material-symbols-outlined text-5xl text-slate-300 mb-4">forum</span>
                                <h3 class="font-black text-lg mb-2">কোনো প্রশ্ন নেই</h3>
                                <p class="text-sm text-slate-500 mb-4">আপনার কোনো প্রশ্ন থাকলে নির্দ্বিধায় পোস্ট করুন।
                                </p>
                            </div>
                            <% } %>
        </div>

    </main>

    <!-- Ask Modal -->
    <div id="askModal" class="fixed inset-0 bg-black/50 z-[200] hidden items-center justify-center p-4">
        <div class="bg-white dark:bg-slate-900 rounded-2xl p-6 w-full max-w-md">
            <h3 class="text-lg font-black mb-4">নতুন প্রশ্ন করুন</h3>
            <form action="/qa-forum/ask" method="POST" class="space-y-4">
                <div>
                    <label class="block text-xs font-bold text-slate-500 mb-1">আপনার প্রশ্ন</label>
                    <textarea name="question" rows="4" required
                        class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800 border-none text-sm font-bold"
                        placeholder="এখানে বিস্তারিত লিখুন..."></textarea>
                </div>

                <div class="flex gap-3 pt-2">
                    <button type="button" onclick="closeAskModal()"
                        class="flex-1 py-3 bg-slate-100 dark:bg-slate-800 rounded-xl font-bold text-sm">বাতিল</button>
                    <button type="submit" class="flex-1 py-3 bg-primary text-white rounded-xl font-bold text-sm">পোস্ট
                        করুন</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Mobile Bottom Nav -->
    <nav
        class="fixed bottom-0 left-0 right-0 z-[100] bg-white dark:bg-slate-900 border-t border-slate-100 dark:border-slate-800 lg:hidden pb-safe">
        <div class="flex items-center justify-around h-16">
            <a href="/dashboard" class="flex flex-col items-center gap-0.5 text-slate-400">
                <span class="material-symbols-outlined text-xl">home</span>
                <span class="text-[9px] font-black">হোম</span>
            </a>
            <a href="/messages" class="flex flex-col items-center gap-0.5 text-slate-400">
                <span class="material-symbols-outlined text-xl">mail</span>
                <span class="text-[9px] font-black">মেসেজ</span>
            </a>
            <a href="/downloads" class="flex flex-col items-center gap-0.5 text-slate-400">
                <span class="material-symbols-outlined text-xl">download</span>
                <span class="text-[9px] font-black">ডাউনলোড</span>
            </a>
            <a href="/profile" class="flex flex-col items-center gap-0.5 text-slate-400">
                <span class="material-symbols-outlined text-xl">person</span>
                <span class="text-[9px] font-black">প্রোফাইল</span>
            </a>
        </div>
    </nav>

    <script>
        function openAskModal() {
            document.getElementById('askModal').classList.remove('hidden');
            document.getElementById('askModal').classList.add('flex');
        }
        function closeAskModal() {
            document.getElementById('askModal').classList.add('hidden');
            document.getElementById('askModal').classList.remove('flex');
        }
        document.getElementById('askModal').addEventListener('click', function (e) {
            if (e.target === this) closeAskModal();
        });
    </script>
</body>

</html>