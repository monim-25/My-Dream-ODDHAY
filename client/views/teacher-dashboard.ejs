<!DOCTYPE html>
<html class="light" lang="bn">

<head>
    <title>টিচার ড্যাশবোর্ড | ODDHAY</title>
    <%- include('partials/head') %>
        <style>
            .admin-sidebar {
                width: 280px;
                height: 100vh;
                position: fixed;
                left: 0;
                top: 0;
                background: #fff;
                border-right: 1px solid rgba(0, 0, 0, 0.03);
                z-index: 100;
            }

            .dark .admin-sidebar {
                background: #1e293b;
                border-right: 1px solid rgba(255, 255, 255, 0.03);
            }

            .admin-main {
                margin-left: 280px;
                padding: 48px;
                min-height: 100vh;
            }

            @media (max-width: 1024px) {
                .admin-sidebar {
                    display: none;
                }

                .admin-main {
                    margin-left: 0;
                    padding: 24px;
                }
            }
        </style>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100">

    <aside class="admin-sidebar hidden lg:flex flex-col">
        <%- include('admin/sidebar_content', { active: 'courses' }) %>
    </aside>

    <main class="admin-main max-w-7xl mx-auto">
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6 mb-12 reveal">
            <div>
                <p class="text-[10px] font-black text-primary uppercase tracking-[0.2em] mb-2">ইন্সট্রাক্টর প্যানেল</p>
                <h1 class="text-3xl font-black">কোর্স <span class="text-primary">ম্যানেজমেন্ট</span></h1>
            </div>
            <div class="flex items-center gap-4">
                <button
                    class="size-12 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow-sm flex items-center justify-center text-slate-500 hover:text-primary transition-all"
                    onclick="document.documentElement.classList.toggle('dark')">
                    <span class="material-symbols-outlined block dark:hidden">dark_mode</span>
                    <span class="material-symbols-outlined hidden dark:block text-amber-400">light_mode</span>
                </button>
                <button class="btn-primary !py-3 !px-6 !rounded-2xl shadow-xl shadow-primary/20"
                    onclick="document.getElementById('addCourseModal').classList.remove('hidden')">
                    <span class="material-symbols-outlined">add</span> নতুন কোর্স
                </button>
            </div>
        </header>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16 reveal delay-100">
            <div class="card-smart !p-8 flex items-center gap-6 group hover:translate-y-[-5px]">
                <div class="size-16 rounded-2xl bg-primary/10 text-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-3xl">library_books</span>
                </div>
                <div>
                    <h3 class="text-4xl font-black mb-1">
                        <%= courses.length %>
                    </h3>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">মোট কোর্স</p>
                </div>
            </div>
            <div class="card-smart !p-8 flex items-center gap-6 group hover:translate-y-[-5px]">
                <div class="size-16 rounded-2xl bg-emerald-500/10 text-emerald-500 flex items-center justify-center">
                    <span class="material-symbols-outlined text-3xl">groups</span>
                </div>
                <div>
                    <h3 class="text-4xl font-black mb-1">
                        <%= studentCount %>
                    </h3>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">মোট শিক্ষার্থী</p>
                </div>
            </div>
        </div>

        <!-- Course List -->
        <div class="flex items-center justify-between mb-10 reveal delay-200">
            <h3 class="h2-section !text-xl">আপনার কোর্সসমূহ</h3>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 reveal delay-300">
            <% courses.forEach(course=> { %>
                <div class="card-smart !p-0 overflow-hidden group">
                    <div class="aspect-video relative overflow-hidden">
                        <img src="<%= course.thumbnail || 'https://via.placeholder.com/600x400' %>"
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000">
                        <div class="absolute inset-x-0 bottom-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
                            <span
                                class="px-2 py-0.5 rounded-lg bg-primary text-white text-[10px] font-black uppercase tracking-widest">
                                <%= course.classLevel %>
                            </span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h4 class="text-lg font-black mb-6 line-clamp-1 group-hover:text-primary transition-all">
                            <%= course.title %>
                        </h4>
                        <div
                            class="flex items-center justify-between pt-6 border-t border-slate-50 dark:border-slate-800">
                            <span class="text-xl font-black text-primary">৳ <%= (course.plans && course.plans[0]) ?
                                    course.plans[0].price : '0' %></span>
                            <a href="/admin/course/<%= course._id %>"
                                class="btn-secondary !text-[11px] !py-2.5 !px-5 !rounded-xl !bg-slate-100 dark:!bg-slate-800">
                                ম্যানেজ করুন
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </main>

    <!-- Add Course Modal -->
    <div id="addCourseModal"
        class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[2000] hidden flex items-center justify-center p-6">
        <div
            class="bg-white dark:bg-slate-900 w-full max-w-2xl rounded-[3rem] p-10 md:p-14 shadow-2xl overflow-y-auto max-h-[90vh] relative reveal active">
            <button
                class="absolute top-10 right-10 size-12 rounded-2xl bg-slate-50 dark:bg-slate-800 flex items-center justify-center text-slate-400 hover:text-red-500 transition-all border border-slate-100 dark:border-slate-800"
                onclick="document.getElementById('addCourseModal').classList.add('hidden')">
                <span class="material-symbols-outlined">close</span>
            </button>
            <h2 class="h2-section !text-3xl mb-10">নতুন কোর্স</h2>

            <form action="/admin/add-course" method="POST" enctype="multipart/form-data" class="space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-2">
                        <label
                            class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">কোর্সের
                            শিরোনাম</label>
                        <input type="text" name="title" placeholder="উদা: ম্যাথ প্রোফাইল"
                            class="w-full h-14 px-6 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-2 focus:ring-primary font-bold text-base"
                            required>
                    </div>
                    <div class="space-y-2">
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">শ্রেণী
                            / স্তর</label>
                        <select name="classLevel"
                            class="w-full h-14 px-6 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-2 focus:ring-primary font-bold text-base appearance-none cursor-pointer">
                            <% ['Class 6', 'Class 7' , 'Class 8' , 'Class 9' , 'Class 10' , 'Class 11' , 'Class 12'
                                , 'HSC' ].forEach(cls=> { %>
                                <option value="<%= cls %>">
                                    <%= cls %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">কোর্সের
                        থাম্বনেইল</label>
                    <div class="relative">
                        <input type="file" name="thumbnail"
                            class="w-full p-4 rounded-2xl bg-slate-50 dark:bg-slate-800 text-sm font-bold border-2 border-dashed border-slate-200 dark:border-slate-700">
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">বিস্তারিত
                        বর্ণনা</label>
                    <textarea name="description" rows="4" placeholder="কোর্স সম্পর্কে কিছু লিখুন..."
                        class="w-full p-6 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-2 focus:ring-primary font-bold text-base resize-none"></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-2">
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">মূল্য
                            (৳)</label>
                        <input type="number" name="planPrices" placeholder="যেমন: ৯৯৯"
                            class="w-full h-14 px-6 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-2 focus:ring-primary font-bold text-base">
                        <input type="hidden" name="planNames" value="Full Course">
                        <input type="hidden" name="planDurations" value="365">
                        <input type="hidden" name="accessType" value="paid">
                    </div>
                </div>

                <button type="submit"
                    class="btn-primary w-full h-16 !rounded-2xl !text-lg mt-4 shadow-2xl shadow-primary/30">
                    কোর্স তৈরি করুন
                    <span class="material-symbols-outlined">rocket_launch</span>
                </button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => entry.isIntersecting && entry.target.classList.add('active'));
            }, { threshold: 0.1 });
            document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
        });
    </script>
</body>

</html>