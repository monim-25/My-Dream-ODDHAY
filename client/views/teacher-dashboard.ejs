<!DOCTYPE html>
<html class="light" lang="bn">

<head>
    <title>টিচার ড্যাশবোর্ড | ODDHAY</title>
    <%- include('partials/head') %>
        <style>
            .admin-sidebar {
                width: 280px;
                height: 100vh;
                position: fixed;
                left: 0;
                top: 0;
                background: #fff;
                border-right: 1px solid rgba(0, 0, 0, 0.03);
                z-index: 100;
                padding: 2rem;
            }

            .dark .admin-sidebar {
                background: #101922;
                border-right: 1px solid rgba(255, 255, 255, 0.03);
            }

            .admin-main {
                margin-left: 280px;
                padding: 40px;
                min-height: 100vh;
            }

            @media (max-width: 1024px) {
                .admin-sidebar {
                    display: none;
                }

                .admin-main {
                    margin-left: 0;
                    padding: 24px;
                }
            }
        </style>
</head>

<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100">

    <aside class="admin-sidebar hidden lg:flex flex-col">
        <%- include('admin/sidebar_content', { active: 'courses' }) %>
    </aside>

    <main class="admin-main">
        <header class="flex justify-between items-center mb-16">
            <div>
                <h1 class="h2-section !text-[28px]"><span class="text-primary">Course</span> Management</h1>
                <p class="body-main !text-xs opacity-50 font-bold uppercase tracking-wider mt-1">Instructor Panel</p>
            </div>
            <div class="flex items-center gap-4">
                <button class="btn-primary !rounded-xl shadow-xl shadow-primary/20"
                    onclick="document.getElementById('addCourseModal').classList.remove('hidden')">
                    <span class="material-symbols-outlined">add</span> নতুন কোর্স
                </button>
            </div>
        </header>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
            <div class="card-smart !p-8 shadow-sm group hover:shadow-xl transition-all">
                <p class="caption !text-[10px] opacity-40 mb-2">মোট কোর্স</p>
                <h3 class="text-4xl font-black">
                    <%= courses.length %>
                </h3>
            </div>
            <div class="card-smart !p-8 shadow-sm group hover:shadow-xl transition-all">
                <p class="caption !text-[10px] opacity-40 mb-2">মোট শিক্ষার্থী</p>
                <h3 class="text-4xl font-black">
                    <%= studentCount %>
                </h3>
            </div>
        </div>

        <!-- Course List -->
        <h3 class="h3-card !text-xl mb-10">আপনার কোর্সসমূহ</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% courses.forEach(course=> { %>
                <div class="card-smart !p-0 overflow-hidden group shadow-sm hover:shadow-2xl transition-all">
                    <div class="aspect-video relative overflow-hidden">
                        <img src="<%= course.thumbnail || '/images/course-placeholder.jpg' %>"
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                        <span
                            class="absolute top-4 left-4 px-3 py-1 bg-white/20 backdrop-blur-md rounded-lg text-white caption !text-[8px] border border-white/20">
                            <%= course.classLevel %>
                        </span>
                    </div>
                    <div class="p-6">
                        <h4 class="h3-card mb-4 line-clamp-1">
                            <%= course.title %>
                        </h4>
                        <div class="flex items-center justify-between mt-6">
                            <span class="text-primary font-black">৳ <%= (course.plans && course.plans[0]) ?
                                    course.plans[0].price : '0' %></span>
                            <a href="/admin/course/<%= course._id %>"
                                class="btn-secondary !text-xs !px-4 !py-2 !rounded-lg border border-slate-100 dark:border-slate-800">
                                ম্যানেজ করুন
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </main>

    <!-- Add Course Modal -->
    <div id="addCourseModal"
        class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[2000] hidden items-center justify-center p-6 flex">
        <div
            class="bg-white dark:bg-slate-900 w-full max-w-2xl rounded-[3rem] p-10 shadow-2xl overflow-y-auto max-h-[90vh] relative">
            <button
                class="absolute top-8 right-8 size-10 rounded-xl bg-slate-50 dark:bg-slate-800 flex items-center justify-center"
                onclick="document.getElementById('addCourseModal').classList.add('hidden')">
                <span class="material-symbols-outlined text-xl">close</span>
            </button>
            <h2 class="h2-section !text-2xl mb-8">নতুন কোর্স যুক্ত করুন</h2>
            <form action="/admin/add-course" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="caption !text-[11px] ml-1 opacity-60">কোর্সের শিরোনাম</label>
                        <input type="text" name="title"
                            class="w-full h-12 px-5 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-1 focus:ring-primary font-bold text-sm"
                            required>
                    </div>
                    <div class="space-y-2">
                        <label class="caption !text-[11px] ml-1 opacity-60">শ্রেণী / স্তর</label>
                        <select name="classLevel"
                            class="w-full h-12 px-5 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-1 focus:ring-primary font-bold text-sm">
                            <% ['Class 6', 'Class 7' , 'Class 8' , 'Class 9' , 'Class 10' , 'Class 11' , 'Class 12'
                                , 'HSC' ].forEach(cls=> { %>
                                <option value="<%= cls %>">
                                    <%= cls %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>
                <div class="space-y-2">
                    <label class="caption !text-[11px] ml-1 opacity-60">কোর্সের থাম্বনেইল</label>
                    <input type="file" name="thumbnail"
                        class="w-full p-4 rounded-2xl bg-slate-50 dark:bg-slate-800 text-sm font-bold">
                </div>
                <div class="space-y-2">
                    <label class="caption !text-[11px] ml-1 opacity-60">বিস্তারিত বর্ণনা</label>
                    <textarea name="description" rows="4"
                        class="w-full p-5 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-1 focus:ring-primary font-bold text-sm resize-none"></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="space-y-2">
                        <label class="caption !text-[11px] ml-1 opacity-60">মূল্য (৳)</label>
                        <input type="number" name="planPrices"
                            class="w-full h-12 px-5 rounded-2xl bg-slate-50 dark:bg-slate-800 border-none focus:ring-1 focus:ring-primary font-bold text-sm"
                            placeholder="যেমন: ৯৯৯">
                        <input type="hidden" name="planNames" value="Full Course">
                        <input type="hidden" name="planDurations" value="365">
                        <input type="hidden" name="accessType" value="paid">
                    </div>
                </div>

                <button type="submit" class="btn-primary w-full h-14 !rounded-2xl !text-sm mt-4">কোর্স তৈরি
                    করুন</button>
            </form>
        </div>
    </div>

    <%- include('partials/nav_script') %>
</body>

</html>