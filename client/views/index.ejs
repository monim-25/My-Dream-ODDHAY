            <!-- Popular Courses Section -->
            <section id="courses" class="py-20 bg-slate-50 dark:bg-slate-800/30 reveal">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
                        <div class="max-w-xl">
                            <h2 class="text-3xl sm:text-4xl font-black">আমাদের <span class="text-primary">জনপ্রিয়</span>
                                কোর্সসমূহ</h2>
                            <p class="mt-4 text-slate-600 dark:text-slate-400">মেধাবী ইন্সট্রাক্টরদের তৈরি সেরা
                                কোর্সগুলো দিয়ে আপনার শেখার যাত্রা শুরু হোক আজই।</p>
                        </div>
                        <a href="/courses" class="text-primary font-bold flex items-center gap-2 hover:underline">সকল
                            কোর্স দেখুন <span class="material-symbols-outlined">arrow_forward</span></a>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <% if (locals.courses && courses.length> 0) { %>
                            <% courses.forEach(course=> { %>
                                <div
                                    class="bg-white dark:bg-slate-900 rounded-3xl overflow-hidden border border-slate-200 dark:border-slate-800 hover:shadow-2xl transition-all duration-300 group">
                                    <div class="relative aspect-video overflow-hidden">
                                        <img src="<%= course.thumbnail || 'https://images.unsplash.com/photo-1516321318423-f06f85e504b3?auto=format&fit=crop&q=80&w=800' %>"
                                            alt="<%= course.title %>"
                                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                        <div class="absolute top-4 left-4 flex flex-col gap-2">
                                            <div class="flex gap-2">
                                                <span
                                                    class="bg-primary text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase">
                                                    <%= course.category %>
                                                </span>
                                                <span
                                                    class="bg-indigo-500 text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase">
                                                    <%= course.classLevel %>
                                                </span>
                                            </div>
                                            <div class="flex gap-2">
                                                <% if (course.accessType==='free' ) { %>
                                                    <span
                                                        class="bg-emerald-500 text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase flex items-center gap-1">
                                                        <span
                                                            class="material-symbols-outlined text-[10px]">redeem</span>
                                                        FREE
                                                    </span>
                                                    <% } else if (course.accessType==='paid' ) { %>
                                                        <span
                                                            class="bg-rose-500 text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase flex items-center gap-1">
                                                            <span
                                                                class="material-symbols-outlined text-[10px]">payments</span>
                                                            ৳<%= course.price %>
                                                        </span>
                                                        <% } else { %>
                                                            <span
                                                                class="bg-amber-500 text-white text-[10px] font-bold px-3 py-1 rounded-full uppercase flex items-center gap-1">
                                                                <span
                                                                    class="material-symbols-outlined text-[10px]">timer</span>
                                                                <%= course.trialPeriod %> DAYS TRIAL
                                                            </span>
                                                            <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="p-6">
                                        <h3
                                            class="text-xl font-bold mb-3 group-hover:text-primary transition-colors line-clamp-1">
                                            <a href="/course-details/<%= course._id %>">
                                                <%= course.title %>
                                            </a>
                                        </h3>
                                        <p class="text-slate-500 text-sm mb-6 line-clamp-2">
                                            <%= course.description %>
                                        </p>
                                        <div
                                            class="flex items-center justify-between pt-6 border-t border-slate-100 dark:border-slate-800">
                                            <div class="flex items-center gap-2">
                                                <span
                                                    class="material-symbols-outlined text-primary text-sm">schedule</span>
                                                <span class="text-xs font-semibold text-slate-600 dark:text-slate-400">
                                                    <%= course.chapters ? course.chapters.reduce((total, ch)=> total +
                                                        (ch.recordedClasses ? ch.recordedClasses.length : 0), 0) : 0 %>
                                                        টি লেসন
                                                </span>
                                            </div>
                                            <a href="/course-details/<%= course._id %>"
                                                class="px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-white rounded-xl text-sm font-bold hover:bg-primary hover:text-white transition-all">বিস্তারিত</a>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="col-span-full text-center py-12">
                                            <p class="text-slate-500 italic font-medium">বর্তমানে কোনো কোর্স পাওয়া
                                                যায়নি।</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </section>

            <!-- Contact Section -->
            <section id="contact" class="py-20 reveal">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                        <div>
                            <h2 class="text-3xl sm:text-4xl font-black mb-6">আমাদের সাথে <span
                                    class="text-primary">যোগাযোগ</span> করুন</h2>
                            <p class="text-slate-600 dark:text-slate-400 mb-8">আপনার যেকোনো জিজ্ঞাসা বা মতামতের জন্য
                                আমাদের সাথে যোগাযোগ করতে পারেন। আমরা সবসময় আপনার পাশে আছি।</p>

                            <div class="space-y-6">
                                <div class="flex items-center gap-4">
                                    <div
                                        class="size-12 rounded-2xl bg-primary/10 text-primary flex items-center justify-center">
                                        <span class="material-symbols-outlined">mail</span>
                                    </div>
                                    <div>
                                        <p class="text-xs text-slate-500">ইমেইল করুন</p>
                                        <p class="font-bold">support@oddhay.com</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <div
                                        class="size-12 rounded-2xl bg-secondary/10 text-primary flex items-center justify-center">
                                        <span class="material-symbols-outlined">call</span>
                                    </div>
                                    <div>
