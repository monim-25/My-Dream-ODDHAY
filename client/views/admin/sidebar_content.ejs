<div class="flex flex-col h-full bg-white dark:bg-[#0f172a] transition-all duration-300">
    <div class="p-6">
        <a href="/" class="flex items-center gap-3 mb-10 group">
            <div
                class="size-10 rounded-2xl bg-primary/10 text-primary flex items-center justify-center transform group-hover:rotate-12 transition-all duration-500">
                <svg class="size-6" fill="none" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 4H17.3334V17.3334H30.6666V30.6666H44V44H4V4Z" fill="currentColor"></path>
                </svg>
            </div>
            <h1 class="text-xl font-black tracking-tighter dark:text-white">ODDHAY <span
                    class="text-[10px] text-primary block -mt-1 opacity-50 font-bold uppercase tracking-widest leading-none">Management</span>
            </h1>
        </a>

        <div class="space-y-8">
            <!-- Overview Group -->
            <div>
                <p
                    class="text-[10px] font-black text-slate-400 dark:text-slate-500 uppercase tracking-[0.2em] mb-4 px-4">
                    অ্যানালিটিক্স ও মেইন</p>
                <nav class="space-y-1">
                    <a href="/admin"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'dashboard' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span
                            class="material-symbols-outlined text-[20px] <%= active === 'dashboard' ? '' : 'group-hover:scale-110 transition-transform' %> shadow-icon">dashboard</span>
                        ড্যাশবোর্ড
                    </a>
                    <% if (locals.user && locals.user.role==='superadmin' ) { %>
                        <a href="/admin/users"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'users' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                            <span
                                class="material-symbols-outlined text-[20px] <%= active === 'users' ? '' : 'group-hover:scale-110 transition-transform' %> shadow-icon">groups</span>
                            ইউজার ম্যানেজমেন্ট
                        </a>
                        <% } %>
                </nav>
            </div>

            <!-- Content Group -->
            <div>
                <p
                    class="text-[10px] font-black text-slate-400 dark:text-slate-500 uppercase tracking-[0.2em] mb-4 px-4">
                    কন্টেন্ট ও লার্নিং</p>
                <nav class="space-y-1">
                    <a href="/admin/courses"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'courses' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span class="material-symbols-outlined text-[20px] shadow-icon">school</span> কোর্সসমূহ
                    </a>
                    <a href="/admin/classes"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'classes' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span class="material-symbols-outlined text-[20px] shadow-icon">play_circle</span> রেকর্ডেড
                        ক্লাস
                    </a>
                    <a href="/admin/quizzes"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'quizzes' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span class="material-symbols-outlined text-[20px] shadow-icon">quiz</span> পরীক্ষা ও কুইজ
                    </a>
                    <a href="/admin/notes"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'notes' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span class="material-symbols-outlined text-[20px] shadow-icon">description</span> নোটস
                        লাইব্রেরি
                    </a>
                    <a href="/admin/question-bank"
                        class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'questions' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                        <span class="material-symbols-outlined text-[20px] shadow-icon">history_edu</span> কোশ্চেন
                        ব্যাংক
                    </a>
                </nav>
            </div>

            <!-- Finance Group -->
            <% if (locals.user && locals.user.role==='superadmin' ) { %>
                <div>
                    <p
                        class="text-[10px] font-black text-slate-400 dark:text-slate-500 uppercase tracking-[0.2em] mb-4 px-4">
                        ফাইন্যান্স ও সাপোর্ট</p>
                    <nav class="space-y-1">
                        <a href="/admin/payments"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'payments' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                            <span class="material-symbols-outlined text-[20px] shadow-icon">payments</span> পেমেন্ট
                            রিপোর্ট
                        </a>
                        <a href="/admin/qas"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'qas' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                            <span class="material-symbols-outlined text-[20px] shadow-icon">forum</span> সাপোর্ট টিকিট
                        </a>
                    </nav>
                </div>

                <!-- System Group -->
                <div>
                    <p
                        class="text-[10px] font-black text-slate-400 dark:text-slate-500 uppercase tracking-[0.2em] mb-4 px-4">
                        সিস্টেম কনফিগ</p>
                    <nav class="space-y-1">
                        <a href="/admin/settings"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl <%= active === 'settings' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all group">
                            <span class="material-symbols-outlined text-[20px] shadow-icon">settings</span> সিস্টেম
                            সেটিংস
                        </a>
                    </nav>
                </div>
                <% } %>
        </div>
    </div>

    <div class="mt-auto p-6">
        <div
            class="p-5 rounded-[2rem] bg-slate-50 dark:bg-slate-800/30 border border-slate-100 dark:border-slate-800/50 mb-4">
            <div class="flex items-center gap-3 mb-2">
                <div class="size-2 rounded-full bg-emerald-500 animate-pulse"></div>
                <p class="text-[10px] font-black text-slate-400 dark:text-slate-500 uppercase tracking-widest">সার্ভার
                    স্ট্যাটাস: হেলদি</p>
            </div>
            <p class="text-[11px] font-bold text-slate-600 dark:text-slate-300">v2.4.0 (National Platform)</p>
        </div>
        <a href="/logout"
            class="flex items-center gap-3 px-6 py-4 rounded-2xl text-red-500 hover:bg-red-50 dark:hover:bg-red-500/10 font-black text-sm transition-all">
            <span class="material-symbols-outlined text-xl">logout</span> লগআউট
        </a>
    </div>
</div>