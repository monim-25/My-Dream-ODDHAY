        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-4 px-4">মেইন মেনু</p>

        <a href="/admin"
            class="flex items-center gap-3 px-4 py-3.5 rounded-2xl <%= active === 'dashboard' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all">
            <span class="material-symbols-outlined text-xl">dashboard</span> ড্যাশবোর্ড
        </a>

        <% if (locals.user && locals.user.role==='superadmin' ) { %>
            <a href="/admin/users"
                class="flex items-center gap-3 px-4 py-3.5 rounded-2xl <%= active === 'users' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all">
                <span class="material-symbols-outlined text-xl">groups</span> ইউজার ম্যানেজমেন্ট
            </a>
            <% } %>

                <a href="/admin/teacher"
                    class="flex items-center gap-3 px-4 py-3.5 rounded-2xl <%= active === 'courses' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all">
                    <span class="material-symbols-outlined text-xl">school</span> কোর্স ম্যানেজমেন্ট
                </a>

                <a href="/admin/notes"
                    class="flex items-center gap-3 px-4 py-3.5 rounded-2xl <%= active === 'notes' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all">
                    <span class="material-symbols-outlined text-xl">description</span> নোটস লাইব্রেরি
                </a>

                <a href="/admin/question-bank"
                    class="flex items-center gap-3 px-4 py-3.5 rounded-2xl <%= active === 'questions' ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'text-slate-500 hover:bg-slate-50 dark:hover:bg-slate-800/50' %> font-bold text-sm transition-all">
                    <span class="material-symbols-outlined text-xl">history_edu</span> কোয়েশ্চেন ব্যাঙ্ক
                </a>

                <a href="/admin/qas"
