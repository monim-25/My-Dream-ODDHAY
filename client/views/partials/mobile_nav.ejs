<% if (locals.user) { %>
    <!-- Logged-in Bottom Navigation (Visible on all screens) -->
    <div
        class="fixed bottom-8 left-1/2 -translate-x-1/2 w-[90%] max-w-md h-16 bg-white/90 dark:bg-slate-900/90 backdrop-blur-2xl border border-slate-100 dark:border-slate-800 rounded-2xl shadow-2xl flex items-center justify-around z-[2000] px-4">
        <a href="/" class="flex flex-col items-center gap-1 group">
            <span
                class="material-symbols-outlined text-[22px] text-slate-400 group-hover:text-primary transition-colors">home</span>
            <span
                class="text-[9px] font-bold text-slate-400 group-hover:text-primary transition-colors uppercase">হোম</span>
        </a>
        <a href="/courses" class="flex flex-col items-center gap-1 group">
            <span
                class="material-symbols-outlined text-[22px] text-slate-400 group-hover:text-primary transition-colors">explore</span>
            <span
                class="text-[9px] font-bold text-slate-400 group-hover:text-primary transition-colors uppercase">কোর্স</span>
        </a>

        <% if (['admin', 'superadmin' , 'teacher' ].includes(locals.user.role)) { %>
            <a href="/admin"
                class="size-14 -translate-y-6 rounded-full bg-primary text-white flex items-center justify-center shadow-xl shadow-primary/20 border-4 border-background-light dark:border-background-dark active:scale-95 transition-all">
                <span class="material-symbols-outlined text-[28px]">shield_person</span>
            </a>
            <% } else { %>
                <a href="/dashboard"
                    class="size-14 -translate-y-6 rounded-full bg-primary text-white flex items-center justify-center shadow-xl shadow-primary/20 border-4 border-background-light dark:border-background-dark active:scale-95 transition-all">
                    <span class="material-symbols-outlined text-[28px]">dashboard_customize</span>
                </a>
                <% } %>

                    <a href="/feature/notes" class="flex flex-col items-center gap-1 group">
                        <span
                            class="material-symbols-outlined text-[22px] text-slate-400 group-hover:text-primary transition-colors">description</span>
                        <span
                            class="text-[9px] font-bold text-slate-400 group-hover:text-primary transition-colors uppercase">নোটস</span>
                    </a>
                    <a href="/profile" class="flex flex-col items-center gap-1 group">
                        <span
                            class="material-symbols-outlined text-[22px] text-slate-400 group-hover:text-primary transition-colors">person</span>
                        <span
                            class="text-[9px] font-bold text-slate-400 group-hover:text-primary transition-colors uppercase">প্রোফাইল</span>
                    </a>
    </div>
    <% } %>